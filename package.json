{
  "name": "mcp-constraint-monitor",
  "version": "1.0.0",
  "description": "Universal MCP server for real-time coding constraint monitoring and live guardrails",
  "type": "module",
  "main": "src/server.js",
  "bin": {
    "mcp-constraint-monitor": "src/server.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "api": "export $(grep '^CONSTRAINT_.*=' ../../.env.ports | sed 's/#.*//' | xargs) && PORT=$CONSTRAINT_API_PORT node src/dashboard-server.js",
    "dashboard": "cd dashboard && npm run dev",
    "setup": "node scripts/setup.js",
    "test": "node --test test/*.js",
    "demo": "node bin/demo",
    "postinstall": "node scripts/setup.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@qdrant/js-client-rest": "^1.8.0",
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "groq-sdk": "^0.7.0",
    "node-cron": "^3.0.3",
    "redis": "^4.6.0",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "shadcn": "^3.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "mcp-server",
    "constraint-monitoring",
    "real-time-analysis",
    "coding-agent",
    "claude-code",
    "live-guardrails",
    "semantic-analysis"
  ],
  "author": "Agentic Coding System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthropics/mcp-constraint-monitor.git"
  },
  "homepage": "https://github.com/anthropics/mcp-constraint-monitor#readme",
  "files": [
    "src/",
    "bin/",
    "dashboard-new/",
    "config/",
    "scripts/",
    "README.md",
    "constraints.yaml",
    "docker-compose.yml"
  ]
}
